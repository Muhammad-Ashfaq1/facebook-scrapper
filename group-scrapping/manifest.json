{
  "manifest_version": 3,
  "name": "Facebook Groups Extractor",
  "version": "1.0",
  "description": "Extract information from Facebook groups for leads generation",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://*.facebook.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/groups/*"],
      "js": ["content.js"]
    }
  ]
} 