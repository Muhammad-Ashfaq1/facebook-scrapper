{
  "manifest_version": 3,
  "name": "Facebook Group Members Extractor",
  "version": "1.0",
  "description": "Extract Facebook group members to CSV with a single click",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*.facebook.com/*"
  ],
  "web_accessible_resources": [{
    "resources": ["main.min.js"],
    "matches": ["https://*.facebook.com/*"]
  }],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
} 